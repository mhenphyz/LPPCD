import pandas as pd
import numpy as np
from sqlalchemy import create_engine

# carregar o arquivo num dataframe pandas,


column_names = [
                "Sex", 
                "Length", 
                "Diameter", 
                "Height", 
                "Whole weight", 
                "Shucked weight", 
                "Viscera weight", 
                "Shell weight", 
                "Rings"
                ]

frame = pd.read_csv("abalone.data", names=column_names)
print(frame)

# apresentar os dados estatisticos descritivos b√°sicos

print(frame.describe())


